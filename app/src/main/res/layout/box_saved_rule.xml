<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/button_rule"
        android:layout_width="193dp"
        android:layout_height="75dp"
        android:layout_marginTop="6dp"
        android:backgroundTint="@color/cancel"
        android:elevation="6dp"
        android:stateListAnimator="@null"
        android:text="@string/test_rule"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/start_rule"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/start_rule"
        android:layout_width="46dp"
        android:layout_height="47dp"
        android:layout_marginTop="18dp"
        android:contentDescription="@string/start_rule"
        android:src="@drawable/icon_start"
        app:backgroundTint="@color/white"
        app:fabCustomSize="45dp"
        app:layout_constraintEnd_toStartOf="@+id/edit_rule"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_rule"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/black" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/edit_rule"
        android:layout_width="46dp"
        android:layout_height="47dp"
        android:layout_marginTop="18dp"
        android:contentDescription="@string/edit_rule"
        android:src="@drawable/icon_pencil"
        app:backgroundTint="@color/white"
        app:fabCustomSize="45dp"
        app:layout_constraintEnd_toStartOf="@+id/delete_rule"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/start_rule"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/black" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/delete_rule"
        android:layout_width="46dp"
        android:layout_height="47dp"
        android:layout_marginTop="18dp"
        android:contentDescription="@string/delete_rule"
        android:src="@drawable/icon_trash_bin"
        app:backgroundTint="@color/white"
        app:fabCustomSize="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/edit_rule"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/black" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_rule" />

</androidx.constraintlayout.widget.ConstraintLayout>