<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ruleDefinitionFragments.BatterySelectionFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/battery_text"
            android:textSize="34sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/infoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/info_battery_selection"
            android:textSize="20sp"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/margin_top_title"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_battery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/margin_top_title"
            android:layout_marginTop="64dp"
            android:layout_below="@id/infoTextView"
            app:boxBackgroundMode="filled"
            app:boxStrokeWidth="0dp"
            tools:ignore="RelativeOverlap">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_battery"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text"
                android:hint="@string/battery_level_hint"
                android:inputType="number"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <SeekBar
            android:id="@+id/battery_slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_input_battery"
            android:layout_toStartOf="@+id/checkBox"
            android:layout_marginTop="16dp"
            android:progressDrawable="@drawable/seekbar"
            android:thumb="@drawable/seekbar_thumb"
            android:max="100"
            android:progress="50" />

        <TextView
            android:id="@+id/battery_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50%"
            android:textSize="18sp"
            android:layout_below="@+id/battery_slider"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/checkBox"
            android:layout_marginStart="120dp"
            android:layout_marginTop="@dimen/margin_top_title"/>

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/infoTextView"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/margin_top_title"
            android:layout_marginTop="110dp"
            android:background="?android:attr/listChoiceIndicatorMultiple"
            android:backgroundTint="@color/secondary"
            android:button="@null" />

    </RelativeLayout>

</FrameLayout>