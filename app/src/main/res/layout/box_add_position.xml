<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="@color/primary"
        app:boxStrokeWidth="2dp"
        app:cursorColor="@color/primary"
        app:hintEnabled="true"
        app:hintTextColor="@color/primary"
        app:layout_constraintEnd_toStartOf="@+id/edit_position_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RelativeOverlap">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_position"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:hint="@string/insert_position_hint"
            android:inputType="textAutoCorrect|text"
            android:textSize="14sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/confirm_position_button"
        android:layout_width="40dp"
        android:layout_height="41dp"
        android:layout_marginTop="6dp"
        android:clickable="false"
        android:contentDescription="@string/confirm_position_info"
        android:src="@drawable/icon_confirm"
        app:backgroundTint="@color/dark_grey"
        app:fabCustomSize="39dp"
        app:layout_constraintEnd_toStartOf="@+id/current_position_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/edit_position_button"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/edit_position_button"
        android:layout_width="40dp"
        android:layout_height="41dp"
        android:layout_marginTop="6dp"
        android:clickable="false"
        android:contentDescription="@string/confirm_position_info"
        android:src="@drawable/icon_pencil"
        android:visibility="gone"
        app:backgroundTint="@color/primary"
        app:fabCustomSize="39dp"
        app:layout_constraintEnd_toStartOf="@+id/confirm_position_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/text_input_position"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/current_position_button"
        android:layout_width="40dp"
        android:layout_height="41dp"
        android:layout_marginTop="6dp"
        android:clickable="false"
        android:contentDescription="@string/confirm_position_info"
        android:src="@drawable/icon_location"
        app:backgroundTint="@color/primary"
        app:fabCustomSize="39dp"
        app:layout_constraintEnd_toStartOf="@+id/delete_position_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/confirm_position_button"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/delete_position_button"
        android:layout_width="40dp"
        android:layout_height="41dp"
        android:layout_marginTop="6dp"
        android:contentDescription="@string/delete_position_info"
        android:src="@drawable/icon_trash_bin"
        app:backgroundTint="@color/secondary"
        app:fabCustomSize="37dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/current_position_button"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="12dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_input_position" />

</androidx.constraintlayout.widget.ConstraintLayout>